<%= simple_form_for :search, url: cars_path, method: :get do |f| %>
<div class="flex-container">


  <div class="flex-item">

    <input class="form-control string required" type="text" name="query"  id="search_query" placeholder=" Try Murcia" />

  </div>

    <div class="flex-item">
       <%= f.input :start_day, collection: 1..30  %>


      <%= f.input :start_time, as: :time %>


    </div>
      <div class="flex-item">
       <%= f.input :end_date, collection: 1..30 %>
      <%= f.input :end_time, as: :time %>


      </div>


  <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search">Search</i>
    </button>




</div>

<% end %>

