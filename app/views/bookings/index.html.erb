<h1>Your bookings</h1>

<div class="container">

  <div class="row">
      <% @current_user.bookings.each do |booking| %>
    <div class="col-12 col-lg-8">
      <%= cl_image_tag booking.car.image, height: 300, width: 400, crop: :fill %>


    </div>

    <div class="col-12 col-lg-4">
      <h3> <%= booking.car.name%> </h3>
      <p> Desde <%= booking.car.start_date %></p>
      <p>Hasta <%= booking.car.end_date %></p>
      <strong><%= booking.car.price %>€/día</strong>
      <!-- not working, dont knwo how to set up the refund method with STRIPE -->
      <%= button_to "Cancelar mi reserva", booking, :data => { :confirm => "Are you sure?" }, :method => :destroy %>



    </div>
    <% end %>

  </div>
</div>



