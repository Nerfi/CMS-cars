<div class="container">
  <div class="row py-4">

    <div class="col">
      <h1>Order #<%= @booking.id %> <small><span class="badge badge-primary"><%= @booking.state %></span></small></h1>
      <%= cl_image_tag @booking.car.image, height: 300, width: 400, crop: :fill %>
      <ul class="list-unstyled">
        <li><strong>Book from</strong> <%= @booking.start_date %></li>
        <li><strong>CAR</strong> <%= @booking.car.name %> </li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @booking.amount %></li>
        </li>
      </ul>

    </div>
  </div>
</div>
